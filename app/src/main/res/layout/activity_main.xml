<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:weightSum="9"
    android:gravity="center_horizontal|bottom"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <HorizontalScrollView
        android:id="@+id/scrool"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/txtbala"
            android:textColor="?attr/colorOnPrimary"
            android:singleLine="true"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:scrollHorizontally="true"


            android:textSize="@dimen/textview_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/txtpaeen"
        android:textSize="@dimen/textview_size"
        android:singleLine="true"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_margin="4dp"/>
    <TableLayout
        android:layout_marginBottom="4dp"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.25"
        >
        <TableRow
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <Button
                android:id="@+id/btnAc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:fontFamily="@font/product_sans"
                android:text="Ac"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/matnbozorg" />
            <Button
                android:id="@+id/btnpbaz"
                android:text="("
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorSecondary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnpbaste"
                android:text=")"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorSecondary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_taghsim"
                android:text="/"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorSecondary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </TableRow>
        <TableRow

            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_zarb"
                android:text="*"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorSecondary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </TableRow>
        <TableRow
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <Button
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_6"
                android:text="6"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_menha"
                android:text="-"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorSecondary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </TableRow>
        <TableRow
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_3"
                android:text="3"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_jam"
                android:text="+"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorSecondary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </TableRow>
        <TableRow
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <Button
                android:id="@+id/btn_pakidan"
                android:layoutDirection="rtl"
                android:text=">"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorSecondary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_0"
                android:text="0"
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_dot"
                android:text="."
                android:textSize="@dimen/matnbozorg"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/product_sans"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <FrameLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                >
                <TextView
                    android:id="@+id/btn_mosavi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/backmosavi"
                    android:gravity="center"
                    android:text="="
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/matnbozorg"

                    />
            </FrameLayout>




        </TableRow>





    </TableLayout>







</LinearLayout>